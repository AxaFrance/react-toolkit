{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "types": ["jest", "node", "react", "react-dom"]
}
