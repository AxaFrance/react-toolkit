{
  "version": "3.0.0-alpha.2",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %s [skip ci]"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock",
        "--legacy-peer-deps"
      ]
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/Form/*",
    "packages/Form/Input/*",
    "packages/Layout/*",
    "packages/Modal/*"
  ]
}
