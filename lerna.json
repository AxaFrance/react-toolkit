{
  "version": "1.0.3",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %s [ci skip]"
    },
    "bootstrap": {
      "ignore": "component-*"
    }
  },
  "packages": [
    "examples/*",
    "packages/*",
    "packages/Form/*",
    "packages/Form/Input/*",
    "packages/Layout/*",
    "packages/Modal/*",
    "storybook/*"
  ]
}
