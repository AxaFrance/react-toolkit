{
  "version": "1.4.0-alpha.0",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish %s [skip ci]"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "packages/*",
    "packages/Form/*",
    "packages/Form/Input/*",
    "packages/Layout/*",
    "packages/Modal/*"
  ]
}
