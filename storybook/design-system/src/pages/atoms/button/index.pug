extends ../../../commons/layout

block meta
  -var activePath = '/atoms/button';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +Menu({ activePath })

block page
  +PageTitle({ title: 'Button', subtitle: 'Atom' })
  .tk-page__links
    +PageSummary()
    +PageLinks({github, storybook, badge})
  +PageContentComponent()
    block guidelines
      +PageMarkdown()
        include:markdown-it(html) ./markdown/guidelines.md
    block code
      +Demo({ title:'Classic Button', storybook, activePath, tmpl: `button` })
      +Demo({ title:'Button with icon', storybook, activePath, tmpl: `button-icon` })
      +Demo({ title:'Button reverse', storybook, activePath, tmpl: `button-reverse` })
      +Demo({ title:'Button circle', storybook, activePath, tmpl: `circle` })
      +Demo({ title:'Button ghost', storybook, activePath, tmpl: `ghost` })
    block style
      +PageMarkdown()
        include:markdown-it(html) ./markdown/style.md
      +Colors({ colors })
