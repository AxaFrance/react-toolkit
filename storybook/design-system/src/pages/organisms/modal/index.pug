extends ../../../commons/layout

block meta
  -var activePath = '/organisms/modal';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var sassPath = 'react-toolkit-modal-default/dist/modal.scss'
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "iframe"

block menu
  +MenuComponents({ activePath })

block headerlinks
  +Headerlinks({ activePath:'/components' })

block page
  +PageTitle({ title: 'Modal', subtitle: 'Organisms' })
  .tk-page__links
    +PageLinks({github, storybook, badge})
  +PageContentComponent({storybook})
    block code
      +Demo({ title:'Modal', storybook, activePath, tmpl: 'modal', sassPath, iframe: true, modifier:'high' })
      +Demo({ title:'Modal Large', storybook, activePath, tmpl: 'modal-large', sassPath, iframe: true, modifier:'high' })
      +Demo({ title:'Modal Small', storybook, activePath, tmpl: 'modal-small', sassPath, iframe: true, modifier:'high' })
    block react
      iframe(class=`${prefix}-demo__iframe ${prefix}-demo__iframe--storybook` src=`${storybookBaseUrl}${storybook}`)
    block guidelines
      +PageMarkdown()
        include:markdown-it(html) ./markdown/guidelines.md
    block style
      +PageMarkdown()
        include:markdown-it(html) ./markdown/style.md
      +Colors({ colors })
