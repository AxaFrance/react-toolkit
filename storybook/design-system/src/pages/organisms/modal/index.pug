extends ../../../commons/layout

block meta
  -var activePath = '/organisms/modal';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var sassPath = 'react-toolkit-modal-default/dist/modal.scss'
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +Menu({ activePath })

block page
  +PageTitle({ title: 'Modal', subtitle: 'Organisms' })
  .tk-page__links
    +PageSummary()
    +PageLinks({github, storybook, badge})
  +PageContentComponent()
    block guidelines
      +PageMarkdown()
        include:markdown-it ./markdown/guidelines.md
    block code
      +Demo({ title:'Modal', storybook, activePath, tmpl: 'modal', sassPath, iframe: true })
      +Demo({ title:'Modal Large', storybook, activePath, tmpl: 'modal-large', sassPath, iframe: true })
      +Demo({ title:'Modal Small', storybook, activePath, tmpl: 'modal-small', sassPath, iframe: true })
    block style
      +Colors({ colors })
      +PageMarkdown()
        include:markdown-it ./markdown/style.md
