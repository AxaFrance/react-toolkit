extends ../../../commons/layout

block meta
  -var activePath = '/organisms/header';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +Menu({ activePath })

block page
  +PageTitle({ title: 'Header', subtitle: 'Organisms' })
  .tk-page__links
    +PageSummary()
    +PageLinks({github, storybook, badge})
  +PageContentComponent()
    block guidelines
      +PageMarkdown()
        include:markdown-it ./markdown/guidelines.md
    block code
      +Demo({ title:'Classic Header', storybook, activePath, tmpl: 'classic' })
      +Demo({ title:'Header with NavBar', storybook, activePath, tmpl: 'header-nav' })
      +Demo({ title:'Header with TitleBar', storybook, activePath, tmpl: 'header-titlebar' })
    block style
      +Colors({ colors })
      +PageMarkdown()
        include:markdown-it ./markdown/style.md
