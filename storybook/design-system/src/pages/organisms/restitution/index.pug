extends ../../../commons/layout

block meta
  -var activePath = '/organisms/restitution';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var sassPath = 'react-toolkit-restitution/dist/restitution.scss'
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +MenuComponents({ activePath })

block headerlinks
  +Headerlinks({ activePath:'/components' })

block page
  +PageTitle({ title: 'Restitution', subtitle: 'Organisms' })
  .tk-page__links
    +PageLinks({github, storybook, badge})
  +PageContentComponent({storybook})
    block code
      +Demo({ title:'Restitution', storybook, activePath, tmpl: 'restitution', sassPath })
      +Demo({ title:'Restitution double', storybook, activePath, tmpl: 'restitution-double', sassPath })
      +Demo({ title:'Restitution more', storybook, activePath, tmpl: 'restitution-more', sassPath })
    block react
      iframe(class=`${prefix}-demo__iframe ${prefix}-demo__iframe--storybook` src=`${storybookBaseUrl}${storybook}`)
    block guidelines
      +PageMarkdown()
        include:markdown-it(html) ./markdown/guidelines.md
    block style
      +PageMarkdown()
        include:markdown-it(html) ./markdown/style.md
      +Colors({ colors })
