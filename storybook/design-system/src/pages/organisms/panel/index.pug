extends ../../../commons/layout

block meta
  -var activePath = '/organisms/panel';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +Menu({ activePath })

block page
  +PageTitle({ title: 'Panel', subtitle: 'Organisms' })
  .tk-page__links
    +PageSummary()
    +PageLinks({github, storybook, badge})
  +PageContentComponent()
    block guidelines
      +PageMarkdown()
        include:markdown-it ./markdown/guidelines.md
    block code
      +Demo({ title:'Panel', storybook, activePath, tmpl: 'panel', modifier: 'panel' })
      +Demo({ title:'Panel list', storybook, activePath, tmpl: 'panel-list', modifier: 'panel' })
      +Demo({ title:'Panel selection', storybook, activePath, tmpl: 'panel-selection', modifier: 'panel' })
    block style
      +Colors({ colors })
      +PageMarkdown()
        include:markdown-it ./markdown/style.md
