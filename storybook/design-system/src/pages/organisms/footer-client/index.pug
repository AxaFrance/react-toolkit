extends ../../../commons/layout

block meta
  -var activePath = '/organisms/footer-client';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +Menu({ activePath })

block page
  +PageTitle({ title: 'Footer Client', subtitle: 'Organisms' })
  .tk-page__links
    +PageSummary()
    +PageLinks({github, storybook, badge})
  +PageContentComponent()
    block guidelines
      +PageMarkdown()
        include:markdown-it ./markdown/guidelines.md
    block code
      +Demo({ title:'Simple Footer Client', storybook, activePath, tmpl: 'classic', modifier: 'footerclient' })
      +Demo({ title:'Footer Client With Bottom', storybook: 'layout-footerclient--without-bottom', activePath, tmpl: 'footer-with-bottom', modifier: 'footerclient' })
      +Demo({ title:'Complex Footer Client', storybook: 'layout-footerclient--complex', activePath, tmpl: 'footer-complex', modifier: 'footerclient' })
    block style
      +Colors({ colors })
      +PageMarkdown()
        include:markdown-it ./markdown/style.md
