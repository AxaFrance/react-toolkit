extends ../../../commons/layout

block meta
  -var activePath = '/organisms/footer-client';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/data.json`)
  -var sassPath = 'react-toolkit-layout-footer-client/dist/footer-client.scss'
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block vars
  - var id = "component"

block menu
  +MenuComponents({ activePath })

block headerlinks
  +Headerlinks({ activePath:'/components' })

block page
  +PageTitle({ title: 'Footer Client', subtitle: 'Organisms' })
  .tk-page__links
    +PageLinks({github, storybook, badge})
  +PageContentComponent({storybook})
    block code
      +Demo({ title:'Simple Footer Client', storybook, activePath, tmpl: 'classic', modifier: 'footerclient', sassPath })
      +Demo({ title:'Footer Client With Bottom', storybook: 'layout-footerclient--without-bottom', activePath, tmpl: 'footer-with-bottom', modifier: 'footerclient', sassPath })
      +Demo({ title:'Complex Footer Client', storybook: 'layout-footerclient--complex', activePath, tmpl: 'footer-complex', modifier: 'footerclient', sassPath })
    block react
      iframe(class=`${prefix}-demo__iframe ${prefix}-demo__iframe--storybook` src=`${storybookBaseUrl}${storybook}`)
    block guidelines
      +PageMarkdown()
        include:markdown-it(html) ./markdown/guidelines.md
    block style
      +PageMarkdown()
        include:markdown-it(html) ./markdown/style.md
      +Colors({ colors })
