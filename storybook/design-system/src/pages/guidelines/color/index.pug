extends ../../../commons/layout

block meta
  -var activePath = '/guidelines/color';
  -const { metatitle, metadescription, metakeywords, github, storybook, badge, colors } = require(`../src/pages${activePath}/meta.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block menu
  +MenuGuidelines({ activePath })

block headerlinks
  +Headerlinks({ activePath:'/guidelines' })

block page
  +PageTitle({ title: 'Couleur' })
  +PageContentComponent({storybook, js: false})
    block code
      include ./templates/classic
    block guidelines
      +PageMarkdown()
        include:markdown-it(html) ./markdown/content.md
    block style
      +PageMarkdown()
        include:markdown-it(html) ./markdown/style.md
