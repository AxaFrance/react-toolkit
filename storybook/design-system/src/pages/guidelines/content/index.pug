extends ../../../commons/layout

block meta
  -const { metatitle, metadescription, metakeywords } = require('../src/pages/guidelines/content/meta.json')
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block menu
  +MenuGuidelines({ activePath:'/guidelines/content' })

block headerlinks
  +Headerlinks({ activePath:'/guidelines' })

block page
  +PageTitle({ title: 'Contenu' })
  +PageContent()
    +PageMarkdown()
      include:markdown-it(html) ./markdown/content.md
