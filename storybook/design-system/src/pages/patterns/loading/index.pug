extends ../../../commons/layout

block vars
  - var id = "github"

block meta
  -var activePath = '/patterns/loading'
  -const { metatitle, metadescription, metakeywords } = require(`../src/pages${activePath}/meta.json`)
  -var metaTitle = metatitle
  -var metaDescription = metadescription
  -var metaKeywords = metakeywords
  -var basedir='../../'

block menu
  +MenuPatterns({ activePath })

block headerlinks
  +Headerlinks({ activePath:'/patterns' })

block page
  +PageTitle({ title: 'Chargement' })
  +PageContent()
    p Vous trouverez le composant Loader en 
      a(href=`${baseurl}/atoms/loader`) cliquant ici.
    +PageMarkdown()
      include:markdown-it(html) ./markdown/content.md
