block locals
    - const { setClassActive, setClass, pugg, pretty, scssTransformer, fs, beautifyCss, beautifyHtml } = functions
    - const { title, author, geography, copyright, email, description, keywords, lang, avatar } = general
    - const { prefixjs, prefix, pathImg, pathFavicons, storybookBaseUrl, storybookIframeUrl, githubBaseUrl, badgeBaseUrl } = base
    - const { main, getstarted, guidelines, patterns, layouts, style, components, structure, form } = menu

block vars
    - var id = "home"
    - var menuState = undefined

doctype html
html(lang=lang id=`${prefix}-${id}-html` class=`${prefix}-html ${prefix}-html--${id}`)
    head
        link(rel="canonical" href=baseurl)
        include ./includes/meta
        block meta
        include ./includes/favicon.pug
        meta(name="description" content=metaDescription || description)
        meta(name="keywords" content=metaKeywords || keywords)
        title
            =metaTitle || title
        //[if lte IE 8]><script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        link(rel="shortcut icon" href="img/favicon.ico")
        link(href=`${basedir}bundle.css` rel="stylesheet" type="text/css")
        link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.6/styles/sunburst.min.css")
        style.
          block style
    body(id=`${prefix}-${id}-body` class=`${prefix}-body`)
        block menu
        include ../components/header/header
        include ../components/content/content
            include ../components/page/page
        include ../components/footer/footer
        div(style="display:none")
            include ../assets/sprite/sprite.svg
        script(src=`${basedir}bundle.js`)
        block scriptPage
        block template
        include ./includes/analytics.pug
        script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.6/highlight.min.js")
        script.
            hljs.initHighlightingOnLoad();
